generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Relacionamentos
    subjects   Subject[]
    activities Activity[]
    exams      Exam[]
    works      Work[]
}

model Subject {
    id        Int     @id @default(autoincrement())
    name      String
    code      String  @unique
    professor String
    schedule  String?

    userId Int
    user   User @relation(fields: [userId], references: [id])

    exams Exam[]
    works Work[]
}

model Exam {
    id           Int      @id @default(autoincrement())
    title        String
    date         DateTime
    location     String
    expectedNote Float?

    subjectId Int
    subject   Subject @relation(fields: [subjectId], references: [id])

    userId Int
    user   User @relation(fields: [userId], references: [id])
}

model Work {
    id           Int      @id @default(autoincrement())
    title        String
    description  String?
    deadline     DateTime
    requirements String?

    subjectId Int
    subject   Subject @relation(fields: [subjectId], references: [id])

    userId Int
    user   User @relation(fields: [userId], references: [id])
}

model Activity {
    id          Int       @id @default(autoincrement())
    title       String
    description String?
    priority    Priority  @default(OPTIONAL)
    status      Status    @default(PENDING)
    deadline    DateTime?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    userId Int
    user   User @relation(fields: [userId], references: [id])
}

enum Priority {
    URGENT
    IMPORTANT
    OPTIONAL
}

enum Status {
    PENDING
    COMPLETED
}
